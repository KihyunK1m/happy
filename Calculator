<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>인쇄비 계산기</title>
    <script>
        function calculatePrintingCost() {
            const 면수 = parseInt(document.getElementById('면수').value) || 0;
            const 컬러면수 = parseInt(document.getElementById('컬러면수').value) || 0;

            // 고정값
            const 매수 = 23;
            const 단가 = 20860;
            const 인쇄단가 = 11210;
            const 조판생략감액 = 2380;
            const 인쇄부수 = 350;
            const 절수 = 16;
            const 용지대가산 = 1.29;
            const 용지대단가 = 70790;
            const 조판비단가 = 4000;
            const 필름출력비단가 = 8040;
            const 색도 = 4;
            const 인쇄판비단가 = 12140;
            const 통수 = 1000;
            const 인쇄비가산 = 1.2;
            const 인쇄비단가2 = 43.46;

            // 계산 로직
            const 제작비 = 매수 * 단가;
            const 판수 = Math.ceil(컬러면수 / 8);
            const 인쇄비1 = (면수 - 컬러면수) * (인쇄단가 - 조판생략감액);
            const 용지대 = (((인쇄부수 * 컬러면수) / (절수 * 2) / 500) * 용지대가산 * 용지대단가);
            const 조판비 = 컬러면수 * 조판비단가;
            const 필름출력비 = 컬러면수 * 필름출력비단가;
            const 인쇄판비 = 색도 * 판수 * 인쇄판비단가;
            const 인쇄비2 = 판수 * 통수 * 인쇄비가산 * 인쇄비단가2;        
            const 내지_합계금액 = 용지대 + 조판비 + 필름출력비 + 인쇄판비 + 인쇄비2;
            const 일반관리비 = 내지_합계금액 * 0.14;
            const 이윤 = (내지_합계금액 + 일반관리비 - 용지대) * 0.25;
            const 중간합계 = 제작비 + 인쇄비1 + 내지_합계금액 + 일반관리비 + 이윤;
            const 공급가액 = Math.floor(중간합계 * 0.8 / 10000) * 10000;
            const 부가세 = 공급가액 * 0.1;
            const 합계금액 = 공급가액 + 부가세;

            document.getElementById('result').innerHTML = `합계금액: ${합계금액.toLocaleString()}원`;
        }
    </script>
</head>
<body>
    <h2>기본, 기후 인쇄비 계산기</h2>
    면수: <input type="number" id="면수" placeholder="전체 면수 입력" oninput="calculatePrintingCost()"><br>
    컬러면수: <input type="number" id="컬러면수" placeholder="컬러 면수 입력" oninput="calculatePrintingCost()"><br>
    <div id="result"></div>
</body>
</html>
